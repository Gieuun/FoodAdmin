<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
<mapper namespace="mybatis.FoodDBMapper">

	<insert id="insertFoodDB"
		parameterType="com.sds.foodadmin.domain.FoodDB">
		INSERT INTO foodDB (foodname, kcal, carbohydrate,
		protein, fat, sugar, sodium)
		VALUES (#{foodname}, #{kcal},
		#{carbohydrate}, #{protein}, #{fat}, #{sugar}, #{sodium})
	</insert>

	<select id="selectCount" resultType="int">
		select count(*) from foodDB
	</select>

	<select id="selectAll"
		resultType="com.sds.foodadmin.domain.FoodDB">
		SELECT * FROM foodDB
	</select>

	<delete id="deleteFoodDB"
		parameterType="com.sds.foodadmin.domain.FoodDB">
		DELETE FROM foodDB
	</delete>

</mapper>